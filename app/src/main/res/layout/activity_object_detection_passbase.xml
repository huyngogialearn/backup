<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/passbase_detect_camera_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#868686">

    <RelativeLayout
            android:id="@+id/passbase_detection_texture_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <ImageView
            android:id="@+id/passbase_detect_center_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:contentDescription="@string/description"
    />

    <ImageView
            android:id="@+id/passbase_detect_corner_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/aic_frame_bottom"
            android:tint="#fff"
            app:layout_constraintStart_toStartOf="@id/passbase_detect_center_image"
            app:layout_constraintEnd_toEndOf="@id/passbase_detect_center_image"
            app:layout_constraintBottom_toBottomOf="@id/passbase_detect_center_image"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:elevation="3dp"
            android:contentDescription="@string/description"
    />

    <ImageView
            android:id="@+id/passbase_detect_corner_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/aic_frame_top"
            android:tint="#fff"
            app:layout_constraintStart_toStartOf="@id/passbase_detect_center_image"
            app:layout_constraintEnd_toEndOf="@id/passbase_detect_center_image"
            app:layout_constraintTop_toTopOf="@id/passbase_detect_center_image"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:elevation="3dp"
            android:contentDescription="@string/description"
    />

    <ImageView
            android:id="@+id/passbase_detect_corner_left"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/aic_frame_left"
            android:tint="#fff"
            app:layout_constraintStart_toStartOf="@id/passbase_detect_center_image"
            app:layout_constraintTop_toTopOf="@id/passbase_detect_center_image"
            app:layout_constraintBottom_toBottomOf="@id/passbase_detect_center_image"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:elevation="3dp"
            android:contentDescription="@string/description"
    />

    <ImageView
            android:id="@+id/passbase_detect_corner_right"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/aic_frame_right"
            android:tint="#fff"
            app:layout_constraintEnd_toEndOf="@id/passbase_detect_center_image"
            app:layout_constraintTop_toTopOf="@id/passbase_detect_center_image"
            app:layout_constraintBottom_toBottomOf="@id/passbase_detect_center_image"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:elevation="3dp"
            android:contentDescription="@string/description"
    />

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintTop_toTopOf="@id/passbase_detect_corner_top"
            app:layout_constraintStart_toStartOf="@id/passbase_detect_corner_top"
            app:layout_constraintEnd_toEndOf="@id/passbase_detect_corner_top"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
    />

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="@id/passbase_detect_corner_bottom"
            app:layout_constraintStart_toStartOf="@id/passbase_detect_corner_bottom"
            app:layout_constraintEnd_toEndOf="@id/passbase_detect_corner_bottom"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
    />

    <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/passbase_detect_corner_left"
            app:layout_constraintTop_toTopOf="@id/passbase_detect_corner_left"
            app:layout_constraintBottom_toBottomOf="@id/passbase_detect_corner_left"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="7dp"
    />

    <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="@id/passbase_detect_corner_right"
            app:layout_constraintTop_toTopOf="@id/passbase_detect_corner_left"
            app:layout_constraintBottom_toBottomOf="@id/passbase_detect_corner_left"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="7dp"
    />

    <ImageView
            android:id="@+id/passbase_detect_exit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/aic_back"
            android:background="@drawable/aic_round_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:contentDescription="@string/description"
    />

    <ImageView
            android:id="@+id/passbase_detect_flash"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/aic_flash"
            android:tint="#fff"
            android:background="@drawable/aic_round_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:padding="6dp"
            android:contentDescription="@string/description"
    />

    <TextView
            android:id="@+id/passbase_detect_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aic_round_circle"
            android:text="@string/scan_your_document"
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/passbase_detect_center_image"
            app:layout_constraintStart_toStartOf="@id/passbase_detect_center_image"
            app:layout_constraintEnd_toEndOf="@id/passbase_detect_center_image"
            android:layout_marginTop="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
    />

    <ImageView
            android:id="@+id/passbase_detect_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#B3FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="200dp"
            android:visibility="gone"
            android:elevation="4dp"
            android:contentDescription="@string/description"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/passbase_detect_hint_parent"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:background="@drawable/aic_rect_passbase_button"
            android:backgroundTint="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:translationY="10dp"
            android:visibility="gone"
            android:elevation="5dp"
    >

        <TextView
                android:id="@+id/passbase_detect_hint_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:text="@string/help_to_process_faster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:id="@+id/passbase_detect_hint_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/passbase_sub_header"
                android:textSize="16sp"
                android:text="@string/id_not_blurred"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passbase_detect_hint_title"
        />
        <TextView
                android:id="@+id/passbase_detect_hint_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/passbase_sub_header"
                android:textSize="16sp"
                android:text="@string/everything_readable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passbase_detect_hint_text1"
        />
        <TextView
                android:id="@+id/passbase_detect_hint_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/passbase_sub_header"
                android:textSize="16sp"
                android:text="@string/nothing_cut_off_in_the_picture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passbase_detect_hint_text2"
        />

        <Button
                android:id="@+id/passbase_detect_hint_redo"
                android:layout_width="120dp"
                android:layout_height="46dp"
                android:background="@android:color/transparent"
                android:text="@string/redo"
                android:textSize="16sp"
                android:textColor="#000"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/passbase_detect_hint_text3"
                android:layout_marginTop="20dp"
        />

        <Button
                android:id="@+id/passbase_detect_hint_confirm"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:background="@drawable/aic_rect_passbase_button"
                android:backgroundTint="@color/passbase_blue"
                android:text="@string/confirm"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/passbase_detect_hint_redo"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/passbase_detect_take_manually_parent"
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:background="@drawable/aic_rect_passbase_button"
            android:backgroundTint="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:translationY="10dp"
            android:visibility="gone"
            android:elevation="5dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/take_it_manually"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
        />

        <Button
                android:id="@+id/passbase_detect_take_manually"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:text="@string/confirm"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/aic_rect_passbase_button"
                android:backgroundTint="@color/passbase_blue"
                android:layout_marginTop="24dp"
        />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>