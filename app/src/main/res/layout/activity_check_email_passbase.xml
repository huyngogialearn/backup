<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:id="@+id/passbase_layoutCheckEmail"
        tools:context=".CheckEmailActivity">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/aic_passbaseicon"
            android:id="@+id/passbase_imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/description"
            android:layout_marginStart="20dp"/>

    <ImageView
            android:layout_width="22dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/aic_cancelicon3x"
            android:id="@+id/passbase_exitButtonCheckEmail"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:background="@color/transparent"
            android:contentDescription="@string/description"
            android:scaleType="centerInside"/>

    <TextView
            android:text="@string/approve_your_email_to_get_started"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/passbase_passbase_textView"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            tools:targetApi="o"
            android:textColor="@android:color/black"/>

    <EditText
            android:id="@+id/passbase_emailAddressTextfield"
            android:layout_width="340dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toBottomOf="@+id/passbase_passbase_textView"
            android:layout_marginTop="18dp"
            android:background="@drawable/aic_round_rect_border"
            android:textColorHint="#aaaaaa"
            android:hint="@string/name_example_com"
            android:textSize="24sp"
            android:singleLine="true"
            android:gravity="center"
            tools:targetApi="o"
            android:imeOptions="actionDone"
            android:textColor="#000000"/>

    <TextView
            android:text="@string/if_you_already_got_verified_via_passbase_you_ll_receive_a_magic_link_or_push_in_your_passbase_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:targetApi="o"
            android:gravity="center"
            android:id="@+id/passbase_textView2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/passbase_emailAddressTextfield"/>

    <ImageView
            android:layout_width="183dp"
            android:layout_height="192dp"
            app:srcCompat="@drawable/aic_figure_inspecting_new_without_bg"
            android:id="@+id/passbase_imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/description"
            app:layout_constraintBottom_toTopOf="@+id/passbase_startButton"/>

    <Button
            android:text="@string/start"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:id="@+id/passbase_startButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            tools:targetApi="o"
            android:background="@color/passbase_blue"
            android:layout_width="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>