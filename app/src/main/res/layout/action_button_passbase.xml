<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:parentTag="android.widget.RelativeLayout"
        tools:layout_width="match_parent"
        tools:layout_height="match_parent"
>

    <androidx.cardview.widget.CardView
            android:id="@+id/passbase_action_btn_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:cardCornerRadius="8dp"
    >

        <View
                android:id="@+id/passbase_action_btn_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/passbase_blue"
        />

        <ProgressBar
                android:id="@+id/passbase_action_btn_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="#fff"
        />

        <TextView
                android:id="@+id/passbase_action_btn_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/continue_s"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:maxLines="1"
        />


    </androidx.cardview.widget.CardView>

</merge>